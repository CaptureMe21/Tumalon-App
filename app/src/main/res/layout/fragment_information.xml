<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.InformationFragment"
    android:background="@color/rblue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/tumalon_logo1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.101" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="TUMALON SMART \n DENTAL CARE"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_dgrey_opaque"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
                app:layout_constraintVertical_bias="0.035">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Client Information Details"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!-- Lastname and Firstname -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/lname_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_lblue"
                        android:hint="Last Name"
                        android:padding="5dp"
                        android:textColor="@color/rblue"
                        android:textStyle="normal"
                        android:textColorHint="@color/dgrey"
                        android:textAppearance="@style/HintItalic"
                        android:maxLength="32"/>


                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/fname_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_lblue"
                        android:hint="First Name"
                        android:padding="5dp"
                        android:textColor="@color/rblue"
                        android:textStyle="normal"
                        android:textColorHint="@color/dgrey"
                        android:textAppearance="@style/HintItalic"
                        android:maxLength="32"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/middle_input"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_lblue"
                        android:hint="Middlename (optional)"
                        android:padding="5dp"
                        android:textColor="@color/rblue"
                        android:textStyle="normal"
                        android:textColorHint="@color/dgrey"
                        android:textAppearance="@style/HintItalic"
                        android:maxLength="32"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/extension_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_lblue"
                        android:hint="Suffix (optional)"
                        android:padding="5dp"
                        android:textColor="@color/rblue"
                        android:textColorHint="@color/dgrey"
                        android:textAppearance="@style/HintItalic"
                        android:maxLength="16"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/nickname_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_lblue"
                        android:hint="Nickname"
                        android:padding="5dp"
                        android:textColor="@color/rblue"
                        android:textColorHint="@color/dgrey"
                        android:textAppearance="@style/HintItalic"
                        android:maxLength="16"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/birthdate_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_lblue"
                        android:hint=" Birthdate"
                        android:padding="5dp"
                        android:textColor="@color/rblue"
                        android:textStyle="normal"
                        android:textColorHint="@color/dgrey"
                        android:focusable="false"
                        android:textAppearance="@style/HintItalic"
                        android:maxLength="10"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/status_spinner"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_lblue"
                        android:textAppearance="@style/HintItalic"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/sex_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_lblue"
                        android:textAppearance="@style/HintItalic"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <!-- Occupation -->
                    <EditText
                        android:id="@+id/occupation_input"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_lblue"
                        android:hint="Occupation"
                        android:maxLength="32"
                        android:padding="5dp"
                        android:textAppearance="@style/HintItalic"
                        android:textColor="@color/rblue"
                        android:textStyle="normal"
                        android:textColorHint="@color/dgrey" />

                </LinearLayout>

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Additional Details"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!-- Lastname and Firstname -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/nationality_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_lblue"
                        android:hint="Enter Nationality"
                        android:padding="5dp"
                        android:textColor="@color/rblue"
                        android:textStyle="normal"
                        android:textColorHint="@color/dgrey"
                        android:textAppearance="@style/HintItalic"
                        android:maxLength="16"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/religion_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_lblue"
                        android:hint="Enter Religion"
                        android:padding="5dp"
                        android:textColor="@color/rblue"
                        android:textStyle="normal"
                        android:textColorHint="@color/dgrey"
                        android:textAppearance="@style/HintItalic"
                        android:maxLength="32"/>
                </LinearLayout>

                <!-- Nickname, Sex, and Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/province_spinner"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_lblue" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/municipality_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_lblue" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/barangay_spinner"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_lblue" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/purok_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_lblue"
                        android:hint="Purok Number"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@color/rblue"
                        android:textStyle="normal"
                        android:textColorHint="@color/dgrey"
                        android:textAppearance="@style/HintItalic"
                        android:maxLength="1"/>

                </LinearLayout>


                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Emergency Contact Person"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!-- Lastname and Firstname -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/fullname_input"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_lblue"
                        android:hint="Full Name"
                        android:padding="5dp"
                        android:textColor="@color/rblue"
                        android:textStyle="normal"
                        android:textColorHint="@color/dgrey"
                        android:textAppearance="@style/HintItalic"
                        android:maxLength="32"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/phoneNum_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_lblue"
                        android:hint="Phone Number"
                        android:padding="5dp"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/rblue"
                        android:textStyle="normal"
                        android:textColorHint="@color/dgrey"
                        android:textAppearance="@style/HintItalic"/>

                </LinearLayout>

                <!-- Lastname and Firstname -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/address_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_lblue"
                        android:hint="Purok-6, Lomangog, Ubay, Bohol"
                        android:padding="5dp"
                        android:textColor="@color/rblue"
                        android:textStyle="normal"
                        android:textColorHint="@color/dgrey"
                        android:textAppearance="@style/HintItalic"
                        android:maxLength="64"/>
                </LinearLayout>

                <Button
                    android:id="@+id/finish_button"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/lblue"
                    android:radius="16dp"
                    android:layout_gravity="center|bottom"
                    android:text="Finish Signup"
                    android:textColor="@color/rblue"
                    android:textStyle="bold" />

            </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>